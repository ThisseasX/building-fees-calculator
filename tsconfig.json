{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
